<%# ~~~~~~~~~~~~~ EDIT YOUR POST ✏️ ~~~~~~~~~~~~~~ %>


<div class="container-edit">


  <div>
    <h1 class="is-size-3-mobile is-size-2-tablet is-size-1-desktop"> Edit your post </h1>
  </div>



  <%# ---------------- %>

  <%# form to edit %>
  <form method="POST" action="/posts/<%= post._id %>">
    <input type="hidden" name="_method" value="PUT"/>


  <%# Caption %>
    <div class="field">
      <div class="control has-icons-right">
        <input class="input is-large" name="caption" placeholder="Caption" value="<%= post.caption %>" />
        <span class="icon is-right">
          <i class="fas fa-check fa-sm"></i>
        </span>
      </div>
    </div>

  <%# upload link to new picture %>
    <div class="field">
      <div class="control has-icons-right">
        <input class="input is-large" name="image" placeholder="image" value="<%= post.image %>" required pattern="^https?:\/\/.+" />

        <span class="icon is-right">
          <i class="fas fa-check fa-sm"></i>
        </span>
      </div>
    </div>

    <div class="control">
      <button class="button is-primary">Submit</button>
    </div>

  </form>

</div>
